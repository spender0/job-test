# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.

zk_first_id=1
zk_last_id=3

s_first_id=6
s_last_id=7




Vagrant.configure(2) do |config|

  (zk_first_id..zk_last_id).each do |i|
    config.vm.define "z#{i}" do |node|
      node.vm.box = "anandbitra/redhat-6.5"
      node.vm.hostname = "z#{i}"
      node.vm.network "private_network", ip: "192.168.100.#{i+220}"
      node.vm.provider :virtualbox do |v|
        v.memory = 512
        v.cpus = 1
      end
    end
  end

  (s_first_id..s_last_id).each do |i|
    config.vm.define "s#{i}" do |node|
      node.vm.box = "anandbitra/redhat-6.5"
      node.vm.hostname = "s#{i}"
      node.vm.network "private_network", ip: "192.168.100.#{i+220}"
      node.vm.provider :virtualbox do |v|
        v.memory = 512
        v.cpus = 1
      end
    end
  end

  (4..4).each do |i|
    config.vm.define "pgsql#{i}" do |pgsql|
      pgsql.vm.box = "anandbitra/redhat-6.5"
      pgsql.vm.hostname = "pgsql#{i}"
      pgsql.vm.network "private_network", ip: "192.168.100.#{i+220}"
      pgsql.vm.provider :virtualbox do |v|
        v.memory = 512
        v.cpus = 1
      end
    end
  end
  
  (5..5).each do |i|
    config.vm.define "redis#{i}" do |redis|
      redis.vm.box = "anandbitra/redhat-6.5"
      redis.vm.hostname = "redis#{i}"
      redis.vm.network "private_network", ip: "192.168.100.#{i+220}"
      redis.vm.provider :virtualbox do |v|
        v.memory = 256
        v.cpus = 1
      end
    end
  end

end


ENV['VAGRANT_DEFAULT_PROVIDER'] = 'virtualbox'
